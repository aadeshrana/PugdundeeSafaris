<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thearbiter.pugdundeesafaris.ContactUs"
    android:background="#EEE"
    >
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardviewmain"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardElevation="1dp"
        android:layout_margin="4dp"
        android:layout_centerVertical="true"

        android:padding="2dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/contactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PUGDUNDEE SAFARIS - CONTACT US"
        android:textColor="#000000"
        android:textAppearance="@android:style/TextAppearance.Medium"
        />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/contactUs"
    android:text="If you have any questions, feel free to send us a message using the form below. We will make contact within 24 hours during the week and 48 hours over the weekend."
    android:layout_marginTop="5dp"
    android:id="@+id/cardviewSecond" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="#b0ab9c"
        android:layout_below="@id/cardviewSecond"
        android:id="@+id/CUCardView"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/CUName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:inputType="text|textEmailAddress"
            android:gravity="center_vertical"
            android:hint="Name:"
            android:textColorHint="#000000"
            android:padding="8dp"


            />

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="#b0ab9c"
        android:layout_below="@id/CUCardView"
        android:id="@+id/CUphoneCV"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"

        >
        <EditText
            android:id="@+id/CUEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:inputType="text|textEmailAddress"
            android:gravity="center_vertical"
            android:hint="Email Address:"
            android:textColorHint="#000000"
            android:padding="8dp"


            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="#b0ab9c"
        android:layout_below="@id/CUphoneCV"
        android:id="@+id/CUEmailCV"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"

        >
        <EditText
            android:id="@+id/CUPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:inputType="number"
            android:gravity="center_vertical"
            android:hint="Mobile Number:"
            android:textColorHint="#000000"
            android:padding="8dp"


            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="#b0ab9c"
        android:layout_below="@id/CUEmailCV"
        android:id="@+id/CUQueryCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        >
        <EditText
            android:id="@+id/CUQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@android:color/transparent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000"


            android:hint="Your Query:"
            android:textColorHint="#000000"
            android:padding="8dp"
            android:inputType="textMultiLine"


            />

    </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardBackgroundColor="#000000"

                android:id="@+id/Bsign_up"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#FFBB88FF"
                android:layout_below="@id/CUQueryCV"
                android:layout_marginTop="10dp"
                >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Submit"
                android:onClick="submitQuery"
                android:id="@+id/butoon1"
                android:textColor="#ffffff"

                />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardviewmain1"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardElevation="1dp"
            android:layout_below="@id/cardviewmain"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="2dp"
            android:layout_marginBottom="4dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="PUGDUNDEE SAFARIS - INDIA"
            android:id="@+id/textView1"

            android:layout_alignParentLeft="true"

            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Unit - 404, The Address, Baani, 1 Golf Course Road, Adjoining Double Tree Hilton, Gurgaon, Haryana - 122011"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="E-mail:enquiry@pugdundeesafaris.com |  \n             info@pugdundeesafaris.com"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TEL:+91-124-2970497, 2570404, 2571404"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Location: Google Map"
            android:id="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true" />

        <TextView
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="PUGDUNDEE SAFARIS (UK OFFICE)"
            android:id="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Address : Edinburgh | United Kingdom"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email : ABehl@pugdundeesafaris.com"
            android:id="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mobile : +44 (0) 77541 29280"
            android:id="@+id/textView9"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
